<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Add a New Item"
        android:textColor="#00FF00"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/itemcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHeader"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_code_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="Item Code"
        android:inputType="number"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/purple_500"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemcode"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="Item Name"
        android:inputType="text"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/purple_500"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/itemQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_production_quantity_limits_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="Quantity"
        android:inputType="number"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/purple_500"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/uPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemQty"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_price_change_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="Unit Price"
        android:inputType="number"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/purple_500"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/supName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uPrice"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="Supplier Name"
        android:inputType="textPersonName"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/purple_500"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/supPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/supName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        android:clipToOutline="true"
        android:drawableStart="@drawable/baseline_phone_android_24"
        android:drawablePadding="16dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:hint="Supplier Phone"
        android:inputType="phone"
        android:outlineAmbientShadowColor="#00FF00"
        android:outlineSpotShadowColor="#00FF00"
        android:padding="16dp"
        android:radius="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/purple_500"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#00FF00"
        android:textColor="#FFFFFF"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="#00FF00"
        android:outlineAmbientShadowColor="#00FF00"
        android:clipToOutline="true"
        android:radius="8dp"
        android:elevation="8dp"
        android:layout_below="@id/supPhone" />

</RelativeLayout>
